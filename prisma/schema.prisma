// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id    Int    @id @default(autoincrement())
  email String @unique
  name  String @unique
  role  String @default("USER")
  posts Post[]
}

model Post {
  id           Int            @id @default(autoincrement())
  create_time  DateTime       @default(now())
  postVersions Post_Version[]
  User         User           @relation(fields: [userId], references: [id])
  userId       Int
}

model Post_Version {
  version     Int                @default(1)
  title       String
  description String?
  content     String
  update_time DateTime           @default(now())
  Post        Post               @relation(fields: [postId], references: [id])
  postId      Int
  published   Boolean            @default(false)
  tags        TagOnPostVersion[]

  @@id([postId, version])
}

model Tag {
  id           Int                @id @default(autoincrement())
  name         String             @unique
  postVersions TagOnPostVersion[]
}

model TagOnPostVersion {
  postVersion Post_Version @relation(fields: [post_VersionPostId, post_VersionVersion], references: [postId, version])
  tag         Tag          @relation(fields: [tagId], references: [id])

  post_VersionPostId  Int
  post_VersionVersion Int
  tagId               Int

  @@id([tagId, post_VersionPostId, post_VersionVersion])
}
